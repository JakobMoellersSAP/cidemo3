pipeline{
	agent any
	
	environment{
	   AWS_ACCESS_KEY_ID     = credentials('Jenkins-username')
        AWS_SECRET_ACCESS_KEY = credentials('Jenkins-password')
	}

	stages {
		stage ('Build'){
		steps{
			sh'''
			java -jar /SAP/mta.jar --build-target=NEO --mtar=mymtar.mtar build
			'''
			}
		}
		stage ('Deploy'){
		steps{
		    
		

		echo '/SAP/sdk/tools/neo.sh deploy-mta --host hanatrial.ondemand.com --account $AWS_ACCESS_KEY_ID' + 'trial'+' --source /var/lib/jenkins/workspace/MultiTargetApplication/mymtar.mtar --user $AWS_ACCESS_KEY_ID --password $AWS_SECRET_ACCESS_KEY -y'
		    }
		}
}
		}

